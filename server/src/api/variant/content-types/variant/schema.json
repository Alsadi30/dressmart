{
  "kind": "collectionType",
  "collectionName": "variants",
  "info": {
    "singularName": "variant",
    "pluralName": "variants",
    "displayName": "variant",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "color": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "thumbnail": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "regular_price": {
      "type": "float",
      "required": true
    },
    "sale_price": {
      "type": "float"
    },
    "on_sale": {
      "type": "boolean",
      "default": false
    },
    "stock_quantity": {
      "type": "biginteger",
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "variants"
    }
  }
}
